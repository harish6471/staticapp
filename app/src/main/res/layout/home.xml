<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            >

            <ImageView
                android:id="@+id/i1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/p1"></ImageView>

            <TextView
                android:id="@+id/t1"
                android:layout_toRightOf="@+id/i1"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Mike,"
                android:textSize="20sp">

            </TextView>


            <TextView
                android:id="@+id/t2"
                android:layout_toRightOf="@+id/i1"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_height="wrap_content"
                android:text="welcome back"
                android:textSize="10sp">

            </TextView>



        </RelativeLayout>



        <TextView
            android:id="@+id/t3"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today,"
            android:textColor="@color/black"
            android:textSize="15sp">

        </TextView>
        <TextView
            android:id="@+id/t4"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$19,892"
            android:textColor="@color/black"
            android:textSize="21sp">

        </TextView>

        <TextView
            android:id="@+id/t5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Balance,"
            android:textColor="@color/black"
            android:textSize="10sp">

        </TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t6"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4,000"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/t6"
                android:text="$1,892"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/t8"
                android:layout_marginTop="38dp"

                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year to date"
                android:textColor="@color/black"
                android:textSize="8sp">


            </TextView>

            <TextView
                android:id="@+id/t9"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@+id/t8"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Interest"
                android:textColor="@color/black"
                android:textSize="8sp">


            </TextView>




        </RelativeLayout>


        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="I want to"
            android:textStyle="bold"></Button>

        <TextView
            android:id="@+id/t10"
            android:layout_marginTop="88dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Transcation"
            android:textColor="@color/black"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/t11"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-07-01"
            android:textColor="@color/black"
            android:textSize="10sp"></TextView>
        <TextView
            android:id="@+id/t12"

            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdrawl Transfer to bank"
            android:textColor="@color/black"
            android:textSize="15sp"></TextView>



    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>



